<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	
	<display-name>Net Banque</display-name>
	
	<description>La banque pour tous.</description>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:spring/data-context.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

  <servlet>
  	<servlet-name>ServletConnexion</servlet-name>
  	<servlet-class>com.voiturier.web.ServletConnexion</servlet-class>
  </servlet>

  <servlet-mapping>
  	<servlet-name>ServletConnexion</servlet-name>
  	<url-pattern>/ServletConnexion</url-pattern>
  </servlet-mapping>

</web-app>
